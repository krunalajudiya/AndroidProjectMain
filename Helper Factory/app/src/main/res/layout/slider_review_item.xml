<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testimonial_back"
    android:padding="@dimen/activity_margin"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/t_img"
            android:src="@drawable/ic_launcher_background"
            android:layout_weight="0.1"
            android:contentDescription="@string/imagecontent"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_size"
            android:text="@string/selectwhatyouneed"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:id="@+id/t_name"
            android:layout_marginLeft="@dimen/activity_margin"
            android:fontFamily="@font/aquawaxmedium"
            android:textColor="@color/text_black_color"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_paragraph_size"
        android:text="@string/selectwhatyouneed"
        android:id="@+id/t_desc"
        android:layout_gravity="center"
        android:fontFamily="@font/aquawaxlight"
        android:textColor="@color/text_grey_color"></TextView>





</LinearLayout>