<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".Activity.Phone_Verification">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:id="@+id/numberlayout"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Your Mobile Number"
            android:textColor="@color/gen_black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/card_margin"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/number"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            app:met_floatingLabel="highlight"
            app:met_errorColor="@color/darkWhite"
            app:met_primaryColor="@color/gen_black"
            app:met_clearButton="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/verification"
                android:text="Submit"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:textSize="15sp" />

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:id="@+id/otplayout"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:textColor="@color/gen_white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="@font/blacklist"
            android:layout_marginTop="@dimen/card_margin"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please Enter OTP "
            app:met_floatingLabel="highlight"
            app:met_errorColor="@color/darkWhite"
            app:met_primaryColor="@color/gen_black"
            app:met_clearButton="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/sendotp"
                android:text="Send OTP"
                style="@style/AppTheme.RoundedCornerMaterialButton"
                android:textSize="15sp" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>