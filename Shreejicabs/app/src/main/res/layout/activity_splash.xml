<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FBDF5C"
    android:orientation="vertical"
    android:weightSum="1">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="taxi_animation.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_weight="0.5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/ewsSplashLogoImgRightImgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:text="Taxi"
            android:textColor="@color/gen_black"
            android:fontFamily="@font/bangers_regular"
            android:textSize="85sp" />

        <TextView
            android:id="@+id/ewsSplashLogoImgLeftImgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers_regular"
            android:text="Trip"
            android:textColor="@color/gen_black"
            android:textSize="85sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/ewsSplashLogoTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="85sp"
        android:layout_marginTop="380dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/app_name"
        android:visibility="gone"
        android:layout_gravity="center|center_vertical"
        />


</LinearLayout>